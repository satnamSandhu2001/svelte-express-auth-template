{
  "name": "@template/api",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node --env-file=.env dist/index.js",
    "dev": "pnpm db:generate && tsx watch --env-file=.env src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "db:migrate": "pnpm exec prisma migrate dev",
    "db:generate": "pnpm exec prisma generate",
    "db:reset": "pnpm exec prisma migrate reset",
    "db:push": "pnpm exec prisma db push",
    "db:seed:dev": "pnpm db:push && tsx --env-file=.env src/db/seed.ts",
    "db:seed:prod": "pnpm db:push && node --env-file=.env dist/db/seed.js"
  },
  "keywords": [],
  "author": "Satnam Sandhu",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "6.19.1",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "winston": "^3.17.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "prisma": "^6.19.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
